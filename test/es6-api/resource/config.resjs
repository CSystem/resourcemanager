    return new Promise((reslove, reject) => {
        var type;
		var ext = file.ext;
		var p = file.path;
		console.log (file)
        switch (ext) {
            case "json":
                if (p.indexOf("sheet") >= 0) {
                    type = "sheet";
                } else if (p.indexOf("movieclip") >= 0) {
                    type = "movieclip";
                } else {
                    type = "json";
                }
                break;
            case "png":
            case "jpg":
                type = "image";
                break;
            case "fnt":
                type = "font";
                break;
            case "mp3":
                type = "sound";
                break;
			case "pvr":
				type = "pvr";
