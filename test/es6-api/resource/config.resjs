exports.getTypeByFileExtensionName = function(ext) {
    var type;
    switch (ext) {
        case "png":
        case "jpg":
            type = "image";
            break;
        case "fnt":
            type = "font";
            break;
        case "mp3":
            type = "sound";
            break;
        case "pvr":
            type = "pvr";
            break;
    }
    return type;
}
exports.filter = function(file, env, plugins) {

    var cwebp = require(path.resolve(__dirname, '../../../node_modules/cwebp-bin'));
    var execFile = require('child_process').execFile;

    return new Promise((reslove, reject) => {
        var type;
        var doNotExportType = true;
        var ext = file.ext;
        var p = file.path;
        //console.log(file)
        type = exports.getTypeByFileExtensionName(ext);
        if (!type) {
            switch (ext) {
                case "json":
                    if (p.indexOf("sheet") >= 0) {
                        type = "sheet";
                    } else if (p.indexOf("movieclip") >= 0) {
                        type = "movieclip";
                    } else {
                        type = "json";
                    }
                    break;
            }
            doNotExportType = false;
        }
        if (type) {
            if (false) {
               
            }
            else {
                var url = p;//plugins.crc32(p) + "." + ext;
                //console.log(url)
                // plugins.add(url)
                if (doNotExportType) {
                    type = ""
                }
                reslove({ url, type, name: p });
            }
        }
        else {
            reslove(null);
        }
    });


}
